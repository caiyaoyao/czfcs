<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/bg_dia_shape"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fwhc_item_zkxx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="租客信息"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/edit"/>

        <TextView
            android:id="@+id/tv_xgxx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#3382FF"
            android:text="编辑"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/close_square"/>

        <TextView
            android:id="@+id/tv_sc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#FF4D4F"
            android:text="删除"/>




    </LinearLayout>


    //姓名
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="姓名:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_fwhc_item_xm"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"/>

    </LinearLayout>

    //性别
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="性别:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_fwhc_item_xb"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"/>

    </LinearLayout>


    //身份证号
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="身份证号:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_fwhc_item_sfzh"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/right_arrow"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    //手机号
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="手机号:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_fwhc_item_sjh"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            android:src="@mipmap/right_arrow"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


</LinearLayout>