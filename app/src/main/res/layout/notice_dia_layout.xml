<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dia_shape"
    android:orientation="vertical">


    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tixin"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />
    <LinearLayout
        android:id="@+id/layout_text_dia_sf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:textColor="@color/oil"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前盘查人员身份：" />
        <TextView
            android:id="@+id/tv_txnr"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_text_dia_jy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center">
        <TextView
            android:textColor="@color/oil"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议："
            />
        <TextView
            android:id="@+id/tv_jianyi"
            android:textColor="#0DC3B5"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/text_dia_new"
        android:textColor="@color/oil"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否继续？"
        android:layout_marginTop="@dimen/dp_15"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/stone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:textSize="@dimen/sp_15"
            android:id="@+id/btn_tx_dia_zdl"
            android:text="取 消"
            android:textColor="@color/oil"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/btn_tx_selector_left" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/stone" />


        <Button
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/btn_tx_dia_jgl"
            android:text="确 定"
            android:textColor="#0DC3B5"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/btn_tx_selector_right"
            />

    </LinearLayout>
</LinearLayout>