<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_12"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_wdpl_tx"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@mipmap/user_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_wdpl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5B595A"
                android:textSize="@dimen/sp_14"
                android:text="沐风" />
            <TextView
                android:id="@+id/tv_wdpl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="3dp"
                android:textColor="#989898"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/comment_item_like"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:visibility="gone"
            android:theme="?android:selectableItemBackgroundBorderless"
            android:src="@mipmap/icon_comment_like"
            android:layout_margin="10dp"
            android:padding="8dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_wdpl_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="#484848"
        android:textSize="@dimen/sp_14"
        android:text="从前有座山，山里有座庙，庙里有个老和尚"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="#F6F6F6">
        <TextView
            android:id="@+id/tv_wdpl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_8"
            android:maxLines="10"
            android:ellipsize="end"
            android:textColor="#949494"
            android:textSize="@dimen/sp_14"
            android:text="世上本没有路，走的人多了，也就成了路"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wdpl_hf"/>

        <TextView
            android:text="回复"
            android:textSize="@dimen/sp_14"
            android:textColor="#3382FF"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divide_color"/>
</LinearLayout>