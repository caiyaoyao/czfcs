<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="@drawable/img_shape"
        android:layout_height="@dimen/dp_80">

        <ImageView
            android:id="@+id/iv_fyxx"
            android:scaleType="fitXY"
            android:src="@mipmap/fjzp_mr"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_80" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top">

            <TextView
                android:id="@+id/tv_main_fyxx_item_tv1"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                android:textColor="#313438"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_main_fyxx_item_tv2"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_main_fyxx_item_tv3"
                android:layout_width="0dp"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#FA6400"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/raingBar"
                android:layout_width="wrap_content"
                app:srb_minimumStars="1"
                app:srb_starWidth="@dimen/dp_16"
                app:srb_starHeight="@dimen/dp_16"
                app:srb_starPadding="@dimen/dp_3"
                app:srb_stepSize="1"
                app:srb_isIndicator="true"
                app:srb_clickable="true"
                app:srb_scrollable="true"
                app:srb_clearRatingEnabled="true"
                app:srb_drawableEmpty="@mipmap/xx_wxz"
                app:srb_drawableFilled="@mipmap/xx_xz"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>